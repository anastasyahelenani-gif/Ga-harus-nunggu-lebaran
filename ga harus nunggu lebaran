  <div id="ending" class="hidden">
    <h2 id="endTitle"></h2>
    <p id="endMessage"></p>
    <img id="endGif" src="" alt="Ending Gif">
  </div>

  <script>
    function startGame() {
      document.getElementById('intro').style.display = 'none';
      event.target.style.display = 'none';
      document.getElementById('level1').classList.remove('hidden');
    }

    function goLevel2() {
      document.getElementById('level1').classList.add('hidden');
      document.getElementById('level2').classList.remove('hidden');
    }

    function goLevel3() {
      document.getElementById('level2').classList.add('hidden');
      document.getElementById('level3').classList.remove('hidden');
    }

    function ending(forgiven) {
      document.getElementById('level3').classList.add('hidden');
      document.getElementById('ending').classList.remove('hidden');
      let endGif = document.getElementById('endGif');
      if (forgiven) {
        document.getElementById('endTitle').innerText = "üéâ YOU WIN!";
        document.getElementById('endMessage').innerText = "Makasih udah maafin aku üíñ Kita tetap temenan ya!";
        endGif.src = "https://media.giphy.com/media/111ebonMs90YLu/giphy.gif";
      } else {
        document.getElementById('endTitle').innerText = "üò¢ TRY AGAIN";
        document.getElementById('endMessage').innerText = "Kayaknya aku harus minta maaf lebih dalam lagi...";
        endGif.src = "https://media.giphy.com/media/9Y5BbDSkSTiY8/giphy.gif";
      }
    }
  </script>
